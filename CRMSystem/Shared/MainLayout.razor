@inherits LayoutComponentBase
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Identity
@using CRMSystem.Data
@inject NavigationManager Navigation
@inject SignInManager<ApplicationUser> SignInManager

<AuthorizeView Context="mainContext">
    <Authorized Context="authContext">
        <div class="container-fluid p-0">
            <div class="sidebar">
                <div class="navbar-brand">
                    🏢 CRM System
                </div>

                <nav class="nav flex-column">
                    <div class="nav-item">
                        <a class="nav-link @GetNavLinkClass("/")" href="/">
                            📊 Dashboard
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link @GetNavLinkClass("/kunden")" href="/kunden">
                            👥 Kunden
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link @GetNavLinkClass("/kontakte")" href="/kontakte">
                            📞 Kontakte
                        </a>
                    </div>
                    <div class="nav-item">
                        <a class="nav-link @GetNavLinkClass("/aufgaben")" href="/aufgaben">
                            📋 Aufgaben
                        </a>
                    </div>
                    <AuthorizeView Roles="Administrator" Context="adminContext">
                        <Authorized Context="adminAuthContext">
                            <div class="nav-item">
                                <a class="nav-link @GetNavLinkClass("/benutzer")" href="/benutzer">
                                    👤 Benutzer
                                </a>
                            </div>
                        </Authorized>
                    </AuthorizeView>
                </nav>
            </div>

            <div class="main-content">
                <div class="top-auth-bar d-flex justify-content-end">
                    <div class="dropdown">
                        <button class="btn btn-outline-dark btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            👋 @authContext.User.Identity?.Name
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li>
                                <button class="dropdown-item" @onclick="Logout">
                                    <i class="bi bi-box-arrow-right"></i> Logout
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="content p-4">
                    @Body
                </div>
            </div>
        </div>
    </Authorized>
    <NotAuthorized Context="notAuthContext">
        <div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
            <div class="text-center">
                <h2>🔐 Authentication Required</h2>
                <p class="text-muted mb-4">Please log in to access the CRM System</p>
                <a href="/loginpage" class="btn btn-primary btn-lg">Go to Login</a>
            </div>
        </div>
    </NotAuthorized>
</AuthorizeView>

@code {
    private string GetNavLinkClass(string path)
    {
        return "";
    }

    private async Task Logout()
    {
        await SignInManager.SignOutAsync();
        Navigation.NavigateTo("/loginpage", true);
    }
}

