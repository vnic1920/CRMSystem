@page "/kontakte"
@using CRMSystem.Services
@using CRMSystem.Models
@using System.ComponentModel.DataAnnotations
@inject IKontaktService KontaktService
@inject IKundeService KundeService
@inject IJSRuntime JSRuntime

<PageTitle>Kontakte - CRM System</PageTitle>

<h1>📞 Kontaktmanagement</h1>

<!-- Loading Indicator -->
@if (isLoading)
{
    <div class="text-center p-5">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="visually-hidden">Laden...</span>
        </div>
        <p class="mt-3 text-muted">Kontakte werden geladen...</p>
    </div>
}
else
{
    <!-- Search and Filter Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">🔍 Kontakte durchsuchen</h5>
                <span class="badge bg-primary">@kontakte.Count Kontakte</span>
            </div>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-8">
                    <div class="input-group">
                        <span class="input-group-text">🔍</span>
                        <input @bind="suchText" @oninput="@((ChangeEventArgs e) => { suchText = e.Value?.ToString() ?? ""; Suchen(); })"
                               class="form-control" placeholder="Namen, Email, Position oder Firma suchen..." />
                        @if (!string.IsNullOrEmpty(suchText))
                        {
                            <button @onclick="SuchTextLeeren" class="btn btn-outline-secondary" type="button">
                                ✕
                            </button>
                        }
                    </div>
                </div>
                <div class="col-md-4">
                    <button @onclick="NeuenKontaktAnzeigen" class="btn btn-success w-100">
                        <i class="bi bi-person-plus"></i> Neuer Kontakt
                    </button>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(suchText))
            {
                <div class="alert alert-info mt-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <small>
                            🔍 Suchergebnisse: <strong>@gefilterteKontakte.Count</strong> Kontakte gefunden
                        </small>
                        <button @onclick="SuchTextLeeren" class="btn btn-sm btn-outline-secondary">
                            ✕ Suche löschen
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Neuer Kontakt Formular -->
    @if (neuerKontaktModal)
    {
        <div class="card shadow-lg mb-4 border-primary">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">➕ Neuen Kontakt erstellen</h5>
            </div>
            <div class="card-body">
                <EditForm Model="neuerKontakt" OnValidSubmit="KontaktErstellen">
                    <DataAnnotationsValidator />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label fw-bold">Name *</label>
                                <InputText @bind-Value="neuerKontakt.Name" class="form-control" placeholder="Vor- und Nachname" />
                                <ValidationMessage For="@(() => neuerKontakt.Name)" class="text-danger small" />
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label fw-bold">Position</label>
                                <InputText @bind-Value="neuerKontakt.Position" class="form-control" placeholder="Position im Unternehmen" />
                                <ValidationMessage For="@(() => neuerKontakt.Position)" class="text-danger small" />
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label fw-bold">Email</label>
                                <InputText @bind-Value="neuerKontakt.Email" class="form-control" placeholder="email@beispiel.de" />
                                <ValidationMessage For="@(() => neuerKontakt.Email)" class="text-danger small" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label fw-bold">Telefon</label>
                                <InputText @bind-Value="neuerKontakt.Telefon" class="form-control" placeholder="+49 123 456789" />
                                <ValidationMessage For="@(() => neuerKontakt.Telefon)" class="text-danger small" />
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label fw-bold">Kunde *</label>
                                <select @bind="neuerKontakt.KundeId" class="form-select">
                                    <option value="0">-- Kunde auswählen --</option>
                                    @foreach (var kunde in kunden)
                                    {
                                        <option value="@kunde.Id">@kunde.Name</option>
                                    }
                                </select>
                                <ValidationMessage For="@(() => neuerKontakt.KundeId)" class="text-danger small" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label fw-bold">Notizen</label>
                        <InputTextArea @bind-Value="neuerKontakt.Notizen" class="form-control" placeholder="Interne Notizen..." rows="3" />
                        <ValidationMessage For="@(() => neuerKontakt.Notizen)" class="text-danger small" />
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-success">
                            💾 Kontakt speichern
                        </button>
                        <button type="button" class="btn btn-secondary" @onclick="NeuenKontaktAbbrechen">
                            ❌ Abbrechen
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    }

    <!-- Status Messages -->
    @if (!string.IsNullOrEmpty(statusMessage))
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            @statusMessage
            <button type="button" class="btn-close" @onclick="StatusMessageSchliessen"></button>
        </div>
    }

    <!-- Kontakte Liste -->
    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="card-title mb-0">📋 Kontaktliste</h5>
        </div>
        <div class="card-body p-0">
            @if (gefilterteKontakte.Count == 0)
            {
                <div class="text-center py-5">
                    <div class="text-muted mb-3">
                        <i class="bi bi-people" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="text-muted">Keine Kontakte gefunden</h5>
                    <p class="text-muted">
                        @(kontakte.Count == 0 ? "Fügen Sie Ihren ersten Kontakt hinzu!" : "Versuchen Sie einen anderen Suchbegriff.")
                    </p>
                    @if (kontakte.Count == 0)
                    {
                        <button @onclick="NeuenKontaktAnzeigen" class="btn btn-primary">
                            ➕ Ersten Kontakt anlegen
                        </button>
                    }
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Kontakt</th>
                                <th>Position</th>
                                <th>Kontaktdaten</th>
                                <th>Kunde</th>
                                <th width="120">Erstellt am</th>
                                <th width="120" class="text-center">Aktionen</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var kontakt in gefilterteKontakte)
                            {
                                <tr>
                                    <td>
                                        <div class="fw-bold text-primary">@kontakt.Name</div>
                                        @if (!string.IsNullOrEmpty(kontakt.Notizen))
                                        {
                                            <small class="text-muted" title="@kontakt.Notizen">
                                                <i class="bi bi-chat-text"></i> Notizen
                                            </small>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(kontakt.Position))
                                        {
                                            <span class="badge bg-light text-dark">@kontakt.Position</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(kontakt.Email))
                                        {
                                            <div class="d-flex align-items-center mb-1">
                                                <i class="bi bi-envelope text-muted me-2"></i>
                                                <small>@kontakt.Email</small>
                                            </div>
                                        }
                                        @if (!string.IsNullOrEmpty(kontakt.Telefon))
                                        {
                                            <div class="d-flex align-items-center">
                                                <i class="bi bi-telephone text-muted me-2"></i>
                                                <small>@kontakt.Telefon</small>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        <span class="fw-bold">@kontakt.Kunde?.Name</span>
                                        @if (!string.IsNullOrEmpty(kontakt.Kunde?.Firma))
                                        {
                                            <br />
                                            <small class="text-muted">@kontakt.Kunde.Firma</small>
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@kontakt.Erstellungsdatum.ToString("dd.MM.yyyy")</small>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <button @onclick="(() => KontaktBearbeiten(kontakt.Id))"
                                                    class="btn btn-outline-warning" title="Kontakt bearbeiten">
                                                ✏️
                                            </button>
                                            <button @onclick="(() => KontaktLoeschen(kontakt.Id))"
                                                    class="btn btn-outline-danger" title="Kontakt löschen">
                                                🗑️
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>

    <!-- Navigation -->
    <div class="mt-4 pt-3 border-top">
        <div class="d-flex gap-2">
            <a href="/" class="btn btn-outline-primary">
                ← Dashboard
            </a>
            <a href="/kunden" class="btn btn-outline-success">
                👥 Kunden
            </a>
            <a href="/aufgaben" class="btn btn-outline-info">
                📋 Aufgaben
            </a>
        </div>
    </div>
}

@code {
    private List<Kontakt> kontakte = [];
    private List<Kontakt> gefilterteKontakte = [];
    private List<Kunde> kunden = [];
    private Kontakt neuerKontakt = new();
    private string statusMessage = "";
    private string suchText = "";
    private bool isLoading = false;
    private bool neuerKontaktModal = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadDaten();
    }

    private async Task LoadDaten()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            kontakte = await KontaktService.GetKontakteAsync();
            kunden = await KundeService.GetKundenAsync();
            gefilterteKontakte = kontakte;
        }
        catch (Exception ex)
        {
            statusMessage = $"❌ Fehler beim Laden der Daten: {ex.Message}";
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private void Suchen()
    {
        if (string.IsNullOrWhiteSpace(suchText))
        {
            gefilterteKontakte = kontakte;
        }
        else
        {
            var search = suchText.ToLower();
            gefilterteKontakte = kontakte.Where(k =>
                k.Name.ToLower().Contains(search) ||
                (k.Email != null && k.Email.ToLower().Contains(search)) ||
                (k.Position != null && k.Position.ToLower().Contains(search)) ||
                (k.Telefon != null && k.Telefon.Contains(search)) ||
                (k.Kunde != null && k.Kunde.Name.ToLower().Contains(search))
            ).ToList();
        }
        StateHasChanged();
    }

    private void SuchTextLeeren()
    {
        suchText = "";
        gefilterteKontakte = kontakte;
        StateHasChanged();
    }

    private void NeuenKontaktAnzeigen()
    {
        neuerKontakt = new Kontakt();
        neuerKontaktModal = true;
        StateHasChanged();
    }

    private void NeuenKontaktAbbrechen()
    {
        neuerKontaktModal = false;
        StateHasChanged();
    }

    private async Task KontaktErstellen()
    {
        try
        {
            await KontaktService.AddKontaktAsync(neuerKontakt);
            statusMessage = $"✅ Kontakt '{neuerKontakt.Name}' wurde erfolgreich gespeichert!";
            neuerKontaktModal = false;
            await LoadDaten();
        }
        catch (Exception ex)
        {
            statusMessage = $"❌ Fehler beim Speichern: {ex.Message}";
        }
    }

    private async Task KontaktBearbeiten(int id)
    {
        // Hier kann später Bearbeitungslogik implementiert werden
        statusMessage = "✏️ Bearbeitungsfunktion wird demnächst implementiert";
        StateHasChanged();
    }

    private async Task KontaktLoeschen(int id)
    {
        try
        {
            var kontakt = kontakte.FirstOrDefault(k => k.Id == id);
            if (kontakt != null)
            {
                await KontaktService.DeleteKontaktAsync(id);
                statusMessage = $"🗑️ Kontakt '{kontakt.Name}' wurde erfolgreich gelöscht!";
                await LoadDaten();
            }
        }
        catch (Exception ex)
        {
            statusMessage = $"❌ Fehler beim Löschen: {ex.Message}";
        }
    }

    private void StatusMessageSchliessen()
    {
        statusMessage = "";
        StateHasChanged();
    }
}