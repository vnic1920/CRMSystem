@page "/kontakte"
@using CRMSystem.Services
@using CRMSystem.Models
@inject IKontaktService KontaktService
@inject IKundeService KundeService

<PageTitle>Kontakte</PageTitle>

<h1>📞 Kontakte</h1>

<div class="row mb-4">
    <div class="col-md-6">
        <button @onclick="NeuenKontaktAnzeigen" class="btn btn-primary">
            ➕ Neuer Kontakt
        </button>
    </div>
</div>

@if (kontakte.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Position</th>
                    <th>Kontakt</th>
                    <th>Kunde</th>
                    <th>Erstellt am</th>
                    <th>Aktionen</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var kontakt in kontakte)
                {
                    <tr>
                        <td>
                            <strong>@kontakt.Name</strong>
                            @if (!string.IsNullOrEmpty(kontakt.Notizen))
                            {
                                <br />
                    
                                <small class="text-muted">📝 @kontakt.Notizen</small>
                            }
                        </td>
                        <td>@kontakt.Position</td>
                        <td>
                            <div>📧 @kontakt.Email</div>
                            @if (!string.IsNullOrEmpty(kontakt.Telefon))
                            {
                                <div>📞 @kontakt.Telefon</div>
                            }
                        </td>
                        <td>@kontakt.Kunde?.Name</td>
                        <td>
                            <small class="text-muted">@kontakt.Erstellungsdatum.ToString("dd.MM.yyyy")</small>
                        </td>
                        <td>
                            <button @onclick="(() => KontaktBearbeiten(kontakt.Id))" class="btn btn-sm btn-warning">✏️</button>
                            <button @onclick="(() => KontaktLoeschen(kontakt.Id))" class="btn btn-sm btn-danger">🗑️</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h5>Noch keine Kontakte</h5>
        <p>Fügen Sie Ihren ersten Kontakt hinzu.</p>
    </div>
}

<!-- Modal für neuen Kontakt -->
@if (neuerKontaktModal)
{
    <div class="modal show d-block" style="background: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Neuen Kontakt erstellen</h5>
                    <button type="button" class="btn-close" @onclick="NeuenKontaktAbbrechen"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Name *</label>
                                <input @bind="neuerKontakt.Name" class="form-control" placeholder="Vor- und Nachname" />
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label">Position</label>
                                <input @bind="neuerKontakt.Position" class="form-control" placeholder="Position im Unternehmen" />
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label">Email</label>
                                <input @bind="neuerKontakt.Email" class="form-control" placeholder="email@beispiel.de" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label class="form-label">Telefon</label>
                                <input @bind="neuerKontakt.Telefon" class="form-control" placeholder="+49 123 456789" />
                            </div>
                            <div class="form-group mb-3">
                                <label class="form-label">Kunde *</label>
                                <select @bind="neuerKontakt.KundeId" class="form-select">
                                    <option value="0">-- Kunde auswählen --</option>
                                    @foreach (var kunde in kunden)
                                    {
                                        <option value="@kunde.Id">@kunde.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Notizen</label>
                        <textarea @bind="neuerKontakt.Notizen" class="form-control" placeholder="Interne Notizen..." rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button @onclick="NeuenKontaktAbbrechen" class="btn btn-secondary">Abbrechen</button>
                    <button @onclick="KontaktErstellen" class="btn btn-primary">Erstellen</button>
                </div>
            </div>
        </div>
    </div>
}

<!-- Navigation -->
<div class="mt-4">
    <a href="/" class="btn btn-secondary">← Dashboard</a>
    <a href="/kunden" class="btn btn-outline-secondary ms-2">👥 Kunden</a>
    <a href="/aufgaben" class="btn btn-outline-secondary ms-2">📋 Aufgaben</a>
</div>

@code {
    private List<Kontakt> kontakte = [];
    private List<Kunde> kunden = [];
    private bool neuerKontaktModal = false;
    private Kontakt neuerKontakt = new();

    protected override async Task OnInitializedAsync()
    {
        await KontakteLaden();
        kunden = await KundeService.GetKundenAsync();
    }

    private async Task KontakteLaden()
    {
        kontakte = await KontaktService.GetKontakteAsync();
    }

    private void NeuenKontaktAnzeigen()
    {
        neuerKontakt = new Kontakt();
        neuerKontaktModal = true;
    }

    private void NeuenKontaktAbbrechen()
    {
        neuerKontaktModal = false;
    }

    private async Task KontaktErstellen()
    {
        if (string.IsNullOrWhiteSpace(neuerKontakt.Name) || neuerKontakt.KundeId == 0)
        {
            return;
        }

        await KontaktService.AddKontaktAsync(neuerKontakt);
        neuerKontaktModal = false;
        await KontakteLaden();
    }

    private async Task KontaktBearbeiten(int id)
    {
        await KontakteLaden();
    }

    private async Task KontaktLoeschen(int id)
    {
        await KontaktService.DeleteKontaktAsync(id);
        await KontakteLaden();
    }
}