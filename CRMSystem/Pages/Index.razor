@page "/"
@using CRMSystem.Services
@using CRMSystem.Models
@inject IKundeService KundeService

<PageTitle>CRM System Dashboard</PageTitle>

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4">🏢 CRM System Dashboard</h1>
            <p class="lead">Willkommen in Ihrem Kundenmanagement-System</p>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@kundenCount</h4>
                            <p class="card-text">Gesamtkunden</p>
                        </div>
                        <div class="align-self-center">
                            <span style="font-size: 2rem;">👥</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@heuteErstellteKunden</h4>
                            <p class="card-text">Heute hinzugefügt</p>
                        </div>
                        <div class="align-self-center">
                            <span style="font-size: 2rem;">🆕</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@kundenMitFirma</h4>
                            <p class="card-text">Mit Firma</p>
                        </div>
                        <div class="align-self-center">
                            <span style="font-size: 2rem;">🏢</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card text-white bg-info">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@kundenMitTelefon</h4>
                            <p class="card-text">Mit Telefon</p>
                        </div>
                        <div class="align-self-center">
                            <span style="font-size: 2rem;">📞</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Schnellsuche -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>🔍 Schnellsuche</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-8">
                            <div class="input-group">
                                <input @bind="suchText" @oninput="Suchen" class="form-control form-control-lg"
                                       placeholder="Kundenname, Email oder Firma suchen..." />
                                @if (!string.IsNullOrEmpty(suchText))
                                {
                                    <button @onclick="SuchTextLeeren" class="btn btn-outline-secondary" type="button">
                                        ✕
                                    </button>
                                }
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-text">
                                @if (!string.IsNullOrEmpty(suchText))
                                {
                                    <span>Gefunden: <strong>@gefundeneKunden.Count</strong> Kunden</span>
                                }
                                else
                                {
                                    <span>Gesamt: <strong>@kundenCount</strong> Kunden</span>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- Suchergebnisse -->
                    @if (!string.IsNullOrEmpty(suchText) && gefundeneKunden.Any())
                    {
                        <div class="mt-3">
                            <h6>Suchergebnisse:</h6>
                            <div class="list-group">
                                @foreach (var kunde in gefundeneKunden.Take(5))
                                {
                                    <a href="/kunden" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1">@kunde.Name</h6>
                                            <small>@kunde.Firma</small>
                                        </div>
                                        <p class="mb-1">📧 @kunde.Email</p>
                                        <small>📞 @kunde.Telefon</small>
                                    </a>
                                }
                                @if (gefundeneKunden.Count > 5)
                                {
                                    <div class="list-group-item text-center text-muted">
                                        ... und @(gefundeneKunden.Count - 5) weitere Ergebnisse
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(suchText) && !gefundeneKunden.Any())
                    {
                        <div class="mt-3 alert alert-warning">
                            Keine Kunden gefunden für "<strong>@suchText</strong>"
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>🚀 Schnellaktionen</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2 d-md-flex">
                        <a href="/kunden" class="btn btn-primary btn-lg me-2">
                            ➕ Neuen Kunden
                        </a>
                        <a href="/aufgaben" class="btn btn-success btn-lg me-2">
                            📋 Neue Aufgabe
                        </a>
                        <a href="/kontakte" class="btn btn-info btn-lg me-2">
                            📞 Neuer Kontakt
                        </a>
                        <button class="btn btn-outline-secondary btn-lg" @onclick="StatistikAktualisieren">
                            🔄 Aktualisieren
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (letzteKunden.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5>📋 Letzte Kunden</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Firma</th>
                                        <th>Erstellt am</th>
                                        <th>Aktion</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var kunde in letzteKunden)
                                    {
                                        <tr>
                                            <td>@kunde.Name</td>
                                            <td>@kunde.Email</td>
                                            <td>@kunde.Firma</td>
                                            <td>
                                                <small class="text-muted">
                                                    @kunde.Erstellungsdatum.ToString("dd.MM.yyyy HH:mm")
                                                </small>
                                            </td>
                                            <td>
                                                <a href="/kunden" class="btn btn-sm btn-outline-primary">
                                                    Bearbeiten
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private List<Kunde> alleKunden = [];
    private int kundenCount = 0;
    private int heuteErstellteKunden = 0;
    private int kundenMitFirma = 0;
    private int kundenMitTelefon = 0;
    private List<Kunde> letzteKunden = [];
    private string suchText = "";
    private List<Kunde> gefundeneKunden = [];

    protected override async Task OnInitializedAsync()
    {
        await StatistikLaden();
    }

    private async Task StatistikLaden()
    {
        alleKunden = await KundeService.GetKundenAsync();

        kundenCount = alleKunden.Count;
        heuteErstellteKunden = alleKunden.Count(k => k.Erstellungsdatum.Date == DateTime.Today);
        kundenMitFirma = alleKunden.Count(k => !string.IsNullOrEmpty(k.Firma));
        kundenMitTelefon = alleKunden.Count(k => !string.IsNullOrEmpty(k.Telefon));
        letzteKunden = alleKunden.OrderByDescending(k => k.Erstellungsdatum).Take(5).ToList();

        StateHasChanged();
    }

    private async Task StatistikAktualisieren()
    {
        await StatistikLaden();
    }

    private void Suchen()
    {
        if (string.IsNullOrWhiteSpace(suchText))
        {
            gefundeneKunden.Clear();
            return;
        }

        var search = suchText.ToLower();
        gefundeneKunden = alleKunden.Where(k =>
            k.Name.ToLower().Contains(search) ||
            (k.Email != null && k.Email.ToLower().Contains(search)) ||
            (!string.IsNullOrEmpty(k.Firma) && k.Firma.ToLower().Contains(search)) ||
            (!string.IsNullOrEmpty(k.Telefon) && k.Telefon.Contains(search))
        ).ToList();

        StateHasChanged();
    }

    private void SuchTextLeeren()
    {
        suchText = "";
        gefundeneKunden.Clear();
        StateHasChanged();
    }
}